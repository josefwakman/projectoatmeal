<h2>Search Authors</h2>

<form action="/authors/search" method="get" autocomplete="off">
    <div class="form-group form-inline">
        <input class="form-control" type="text" name="search" id="search">
    </div>
    <button type="submit" class="btn btn-primary">Search Author</button>
</form>

{{#if searched}}

<div class="search-books-table-div">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            {{#each authors}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/authors/{{id}}">{{firstName}} {{lastName}}</a></td>
            </tr>
            {{/each}}


        </tbody>
    </table>
</div>

<p>Page: {{page}}</p>
<div>
    {{#each paginationWithDots}}
    {{#if isNumber}}
    <a href="/authors/search?search={{../search}}&page={{value}}">{{value}} </a>
    {{else}}
    <a>{{value}}</a>
    {{/if}}
    {{/each}}
</div>

{{/if}}