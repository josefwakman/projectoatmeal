<h2>Search Books</h2>

<form action="/books/search" method="get" autocomplete="off">
    <div class="form-group form-inline">
        <input class="form-control" type="text" name="search" id="search">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

{{#if searched }}

<div class="search-books-table-div">
    <table class="table table-striped" id="bookTable">
        <thead>
            <tr>
                <th>ISBN</th>
                <th>Title</th>
            </tr>
        </thead>
        <tbody>
            {{#if searched}}
            {{#each books}}
            <tr>
                <td>{{this.ISBN}}</td>
                <td><a href="/books/{{this.ISBN}}">{{this.title}}</a></td>
            </tr>
            {{/each}}
            {{/if}}
        </tbody>
    </table>
</div>


<div>
    <p>Current page: {{page}}</p>
    {{#each paginationWithDots}} 
    {{#if this.isNumber}} 
        <a href="/books/search?search={{search}}&page={{this.value}}">{{this.value}} </a>
    {{else}}
        <a>{{this.value}}</a>
    {{/if}}
    {{/each}}
</div>

{{/if}}
