<h2>Author page</h2>

<h3>{{firstName}} {{lastName}}</h3>
<p>Born: {{birthYear}}</p>

<h4>Books:</h4>
{{#each books}}
<a href="/books/{{ISBN}}">{{title}}</a><br>
{{/each}}
{{#if bookErrorMessage}}
    <p>{{bookErrorMessage}}</p>
{{/if}}

{{#if admin}}
<br>

<button class="btn btn-primary">
    <a class="test" href="/authors/addBook/{{id}}">Add Book</a>
</button>

<br>

<button id="editAuthorBtn" class="btn btn-primary">
    <a class="test" href="/authors/edit/{{id}}">Edit Author</a>
</button>
{{/if}}

{{#if getFailed}}
<div class="alert alert-warning">
    <strong>There was an error!</strong>
    <p>{{error}}</p>
</div>
{{/if}}