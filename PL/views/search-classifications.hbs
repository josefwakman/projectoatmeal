<h2>Search classifications</h2>

<form action="/classifications" method="get" autocomplete="off">
    <div class="form-group form-inline">
        <select name="classification" id="classification-select">
            <option value="" selected disabled hidden>Choose book classification</option>
            {{#each classifications}}
            <option value="{{signum}}">{{signum}}</option>
            {{/each}}
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

{{#if searched }}
<h4>Showing results for {{classification}}</h4>

<div class="search-classifications-table-div">
    <table class="table table-striped" id="classificationTable">
        <thead>
            <tr>
                <th>Title</th>
            </tr>
        </thead>

        {{#if searched}}
        <tbody>
            {{#each books}}
            <tr>
                <td><a href="/books/{{ISBN}}">{{title}}</a></td>
            </tr>
            {{/each}}
        </tbody>
        {{/if}}
    </table>

    <p>Page: {{page}}</p>
        <div>
            {{#each paginationWithDots}}
            {{#if isNumber}}
            <a href="/classifications?classification={{../classification}}&page={{value}}">{{value}} </a>
            {{else}}
            <a>{{value}}</a>
            {{/if}}
            {{/each}}
        </div>
</div>

{{/if}}